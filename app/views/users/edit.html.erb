<div class="container">
  <div class="row">
  <div class="col-4"></div>
  <div class="col-7">
    <h1>User info</h1>

    <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <%end%>


    <%= form_with model: @user do |f| %>
      <div><label for="inputName">Name</label></div>
      <div><%= f.text_field :name, autofocus: true, id:"inputName"%></div>

      <div class="mt-1"><label for="inputImage">Image</label></div>
      <div><%= f.file_field :profile_image, accept: "image/*" %></div>

      <div class="mt-1"><label for="inputIntroduction">Introduction</label></div>
      <div><%= f.text_area :introduction, id:"inputIntroduction" %></div>
      <div><%= f.submit "Update User",class:"btn btn-secondary" %></div>
    <% end %>
    </div>
    </div>
  </div>
