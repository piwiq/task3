<div class="container">
  <div class="row">
  <div class="col-4"></div>
  <div class="col-7">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <%end%>


      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div>
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div>
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Update Book' ,class:"btn btn-success"%>
        </div>
        <div>
          <%=link_to "Show", book_path(@book.id) %>
          <nobr>|</nobr>
          <%= link_to "Back", books_path %>
        </div>
      <%end%>
    </div>
  </div>
</div>