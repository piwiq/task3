<h1>User info</h1>

<%= image_tag user.get_profile_image(150,150) %>
<table class="table table-borderd">
  <tr><th>name</th><td><%= user.name %></td></tr>
  <tr><th>introduction</th><td><%= user.introduction %></td></tr>
</table>

<div class="row">
<%= link_to edit_user_path(user),class:"w-100 btn btn-outline-secondary" do%>
<i class="fas fa-user-cog"></i>
<% end %>
</div>


<h1 class="mt-3">New book</h1>
<%= form_with model: book, url: books_path, method: :post do |f| %>
<p>Title</p>
<%= f.text_field :title%>
<p>Opinion</p>
<%= f.text_area :body %>
<div><%= f.submit 'Create Book',class:"btn btn-success"%></div>
<% end %>